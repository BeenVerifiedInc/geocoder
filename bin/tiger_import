#!/bin/bash

TMP="/tmp/tiger-import.$$"
SHPS="edges"
DBFS="featnames addr"
BASE=$(dirname $0)
PATH=$PATH:$BASE/bin
SQL="$BASE/../sql"
HELPER_LIB="$BASE/../lib/geocoder/us/sqlite3.so"
DATABASE=$1
shift

mkdir -p $TMP || exit 1

[ ! -r $DATABASE ] && cat ${SQL}/{create,place}.sql | sqlite3 $DATABASE
 
if [ x"$1" = x"" ]; then
    cat
else
    ls -d $@ | while read state; do
        ls -d ${state}/[0-9]*
    done
fi | while read county; do
    echo "--- $county"
    for file in $SHPS $DBFS; do
        unzip -q $(ls ${county}/*_${file}.zip) -d $TMP
    done
    (echo ".load $HELPER_LIB" && \
     cat ${SQL}/tiger.sql && \
     for file in $SHPS; do
       shp2sqlite -aS $(ls ${TMP}/*_${file}.shp) tiger_${file}
     done && \
     for file in $DBFS; do
       shp2sqlite -an $(ls ${TMP}/*_${file}.dbf) tiger_${file}
     done && \
     cat ${SQL}/convert.sql) | sqlite3 $DATABASE
    rm -f $TMP/*
done 2>&1 | tee import-$$.log
rm -rf $TMP
